<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1360.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <center>
        <Canvas fx:id="canvas" height="800.0" width="1200.0" BorderPane.alignment="CENTER" />
    </center>
    <left>
        <VBox prefHeight="800.0" prefWidth="160.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Light position">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="lightPositionX" text="0">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="lightPositionY" layoutX="20.0" layoutY="42.0" text="0">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="lightPositionZ" layoutX="20.0" layoutY="69.0" text="1000000">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </TextField>
                <Label layoutX="20.0" layoutY="20.0" text="Light intensity">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="lightIntensity" layoutX="20.0" layoutY="106.0" text="1">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></TextField>
                <Button maxWidth="1000" onAction="#handleRenderClick" text="Render">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>
